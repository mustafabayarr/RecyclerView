<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/modelTitleTv"
            style="@style/TextAppearance.AppCompat.Title"
            android:text="Title"
            android:textColor="@color/design_default_color_primary_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/modelImageIv"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/modelTitleTv"
            android:layout_centerHorizontal="true"
            android:src="@color/design_default_color_primary_dark"/>
        <TextView
            android:id="@+id/modelDescrTv"
            android:text="Sample Description ..."
            android:layout_below="@+id/modelImageIv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>